generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  phone     String?
  clerkId   String   @unique
  firstName String?
  lastName  String?
  role      Role     @default(USER)
  cart      Cart?
  orders    Order[]
}

model Product {
  id                   String                   @id @default(uuid())
  name                 String
  description          String
  fabric               String
  inStock              Boolean                  @default(true)
  priceCents           Int
  discountedPriceCents Int?
  primaryImageUrl      String
  createdAt            DateTime                 @default(now())
  updatedAt            DateTime                 @updatedAt
  categoryId           String?
  stock                Int?
  searchVector         Unsupported("tsvector")?
  category             Category?                @relation(fields: [categoryId], references: [id])
  care                 ProductCare[]
  colors               ProductColor[]
  details              ProductDetail[]
  images               ProductImage[]
  sizes                ProductSize[]
  variants             ProductVariant[]

  @@index([categoryId])
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  image       String?
  description String?
  products    Product[]
}

model ProductImage {
  id        String  @id @default(uuid())
  productId String
  url       String
  alt       String  @default("")
  sortOrder Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

model ProductDetail {
  id        String  @id @default(uuid())
  productId String
  value     String
  sortOrder Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

model ProductCare {
  id        String  @id @default(uuid())
  productId String
  value     String
  sortOrder Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}

model ProductSize {
  id        String  @id @default(uuid())
  productId String
  size      String
  sortOrder Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, size])
}

model ProductColor {
  id        String  @id @default(uuid())
  productId String
  name      String
  hex       String
  sortOrder Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, name])
  @@unique([productId, hex])
}

model ProductVariant {
  id                   String      @id @default(uuid())
  productId            String
  size                 String
  colorName            String
  sku                  String?     @unique
  priceCents           Int
  discountedPriceCents Int?
  stockQuantity        Int         @default(0)
  isActive             Boolean     @default(true)
  cartItems            CartItem[]
  orderItems           OrderItem[]
  product              Product     @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, size, colorName])
  @@index([productId])
}

model Cart {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  clerkId   String     @unique
  userId    String?    @unique
  user      User?      @relation(fields: [userId], references: [id])
  items     CartItem[]

  @@index([userId])
}

model CartItem {
  id        String         @id @default(uuid())
  cartId    String
  variantId String
  quantity  Int
  cart      Cart           @relation(fields: [cartId], references: [id], onDelete: Cascade)
  variant   ProductVariant @relation(fields: [variantId], references: [id])

  @@unique([cartId, variantId])
  @@index([cartId])
  @@index([variantId])
}

model Order {
  id           String      @id @default(uuid())
  userId       String
  clerkOrderId String?     @unique
  status       String
  totalCents   Int
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items        OrderItem[]

  @@index([userId])
}

model OrderItem {
  id         String         @id @default(uuid())
  orderId    String
  variantId  String
  quantity   Int
  priceCents Int
  order      Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  variant    ProductVariant @relation(fields: [variantId], references: [id])

  @@unique([orderId, variantId])
  @@index([orderId])
  @@index([variantId])
}

enum Role {
  USER
  ADMIN
}
