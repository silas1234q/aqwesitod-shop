generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique // Add unique for email lookups
  clerkId   String   @unique
  firstName String?
  lastName  String?
  role      Role     @default(USER)
  phone     String?
  cart      Cart?
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email]) // Index for email searches
  @@index([role]) // Index for filtering by role (e.g., finding all admins)
  @@index([createdAt]) // Index for sorting users by registration date
}

model Product {
  id                   String                   @id @default(uuid())
  name                 String
  description          String
  fabric               String
  inStock              Boolean                  @default(true)
  priceCents           Int
  discountedPriceCents Int?
  primaryImageUrl      String
  categoryId           String?
  stock                Int?
  searchVector         Unsupported("tsvector")?
  createdAt            DateTime                 @default(now())
  updatedAt            DateTime                 @updatedAt

  category             Category?                @relation(fields: [categoryId], references: [id],onDelete: SetNull)
  care                 ProductCare[]
  colors               ProductColor[]
  details              ProductDetail[]
  images               ProductImage[]
  sizes                ProductSize[]
  variants             ProductVariant[]

  // Optimized indexes for common queries
  @@index([categoryId]) // Filter by category
  @@index([inStock]) // Filter by availability
  @@index([priceCents]) // Sort/filter by price
  @@index([createdAt]) // Sort by newest
  @@index([categoryId, inStock, priceCents]) // Composite for filtered category queries
  @@index([searchVector], type: Gin) // Full-text search (GIN index)
  @@index([name]) // Search by name
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  image       String?
  description String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([name]) // Already unique, but helpful for sorting
}

model ProductImage {
  id        String  @id @default(uuid())
  productId String
  url       String
  alt       String  @default("")
  sortOrder Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId, sortOrder]) // Composite for fetching images in order
}

model ProductDetail {
  id        String  @id @default(uuid())
  productId String
  value     String
  sortOrder Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId, sortOrder]) // Composite for fetching details in order
}

model ProductCare {
  id        String  @id @default(uuid())
  productId String
  value     String
  sortOrder Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId, sortOrder]) // Composite for fetching care instructions in order
}

model ProductSize {
  id        String  @id @default(uuid())
  productId String
  size      String
  sortOrder Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, size])
  @@index([productId, sortOrder]) // For fetching sizes in order
}

model ProductColor {
  id        String  @id @default(uuid())
  productId String
  name      String
  hex       String
  sortOrder Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, name])
  @@unique([productId, hex])
  @@index([productId, sortOrder]) // For fetching colors in order
}

model ProductVariant {
  id                   String      @id @default(uuid())
  productId            String
  size                 String
  colorName            String
  sku                  String?     @unique
  priceCents           Int
  discountedPriceCents Int?
  stockQuantity        Int         @default(0)
  isActive             Boolean     @default(true)
  
  cartItems            CartItem[]
  orderItems           OrderItem[]
  product              Product     @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, size, colorName])
  @@index([productId]) // Already exists
  @@index([productId, isActive, stockQuantity]) // Find available variants for a product
  @@index([isActive, stockQuantity]) // Find all available variants across products
  @@index([sku]) // Already unique, but helps with SKU lookups
}

model Cart {
  id        String     @id @default(uuid())
  clerkId   String     @unique
  userId    String?    @unique
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  
  user      User?      @relation(fields: [userId], references: [id])

  @@index([userId]) // Already exists
  @@index([updatedAt]) // Find recently updated/abandoned carts
}

model CartItem {
  id        String         @id @default(uuid())
  cartId    String
  variantId String
  quantity  Int
  
  cart      Cart           @relation(fields: [cartId], references: [id], onDelete: Cascade)
  variant   ProductVariant @relation(fields: [variantId], references: [id])

  @@unique([cartId, variantId])
  @@index([cartId]) // Already exists
  @@index([variantId]) // Already exists
}

model Order {
  id           String      @id @default(uuid())
  userId       String
  clerkOrderId String?     @unique
  status       String
  totalCents   Int
  items        OrderItem[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId]) // Already exists
  @@index([status]) // Filter orders by status (pending, completed, etc.)
  @@index([userId, status]) // User's orders filtered by status
  @@index([userId, createdAt]) // User's order history sorted by date
  @@index([createdAt]) // All orders sorted by date (admin view)
}

model OrderItem {
  id         String         @id @default(uuid())
  orderId    String
  variantId  String
  quantity   Int
  priceCents Int
  
  order      Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  variant    ProductVariant @relation(fields: [variantId], references: [id])

  @@unique([orderId, variantId])
  @@index([orderId]) // Already exists
  @@index([variantId]) // Already exists - helps find which orders contain a variant
}
